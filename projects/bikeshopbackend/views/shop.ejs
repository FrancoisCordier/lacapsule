<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap"
      rel="stylesheet"
    />
    <title>BikeShop - Shop</title>
  </head>

  <body>
    <!-- header -->
    <nav class="navbar navbar-light bg-dark">
      <a class="navbar" href="/">
        <img
          src="images/bike-logo.svg"
          width="50"
          height="50"
          class="logo"
          alt=""
        />
        The Bike Shop Experience
      </a>
    </nav>
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb alert alert-secondary mt-3">
          <li class="breadcrumb-item">
            <a class="link-primary fs-5" href="/">Shop</a>
          </li>
          <li class="breadcrumb-item active fs-5" aria-current="page">Cart</li>
        </ol>
      </nav>
      <h1>Votre panier</h1>
      <% if (dataCartBike.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Picture</th>
            <th scope="col">Model</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Total</th>
            <th scope="col">Suppr</th>
          </tr>
        </thead>
        <tbody>
        <%
        
        let totalCart = 0;
        for (let i = 0; i < dataCartBike.length; i++) {
          totalCart += dataCartBike[i].price * dataCartBike[i].quantity;
        %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><img src="<%= dataCartBike[i].img %>" class="basket-img" /></td>
            <td><%= dataCartBike[i].name %></td>
            <td>
              <form action="/update-shop" method="post">
                <input type="number" name="quantity" value="<%= dataCartBike[i].quantity %>" />
                <input type="hidden" name="index" value="<%= i %>" />
                <button type="submit" class="btn btn-primary"><i class="fas fa-sync"></i></button>
              </form>
            </td>
            <td><%= dataCartBike[i].price %>€</td>
            <td><%= dataCartBike[i].price * dataCartBike[i].quantity %>€</td>
            <td><a href="/delete-shop?model=<%= dataCartBike[i].name%>" class="btn btn-primary"><i class="fas fa-trash-alt"></i></a></td>
          </tr>
        <% } %>
        <tfoot>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td class="fs-5">Total</td>
          <td class="fs-5"><%= totalCart %>€</td>
          <td></td>
        </tfoot>
        </tbody>
      </table>
      <% } else { %>
        <h2>Votre panier est vide !</h2>
        <% } %>
    </div>
    <!-- scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/e7fc5f269c.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
