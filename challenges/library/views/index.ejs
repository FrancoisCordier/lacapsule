<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Library</title>
  </head>
  <body>
    <div class="container my-3">
      <a class="btn btn-primary" href="/readers">Show readers list</a>
    </div>
    <div class="container d-flex mt-3">
      <div class="row">
        <h3>Add a reader</h3>
        <form action="/add-reader" method="post">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <div class="input-group">
              <input type="text" class="form-control" name="readerName" />
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="container d-flex mt-3">
      <div class="row">
        <h3>Add a book</h3>
        <form action="/add-book" method="post">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="bookTitle" />
          </div>
          <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" name="bookAuthor" />
          </div>
          <div class="mb-3">
            <label class="form-label">Editor</label>
            <input type="text" class="form-control" name="bookEditor" />
          </div>
          <div class="mb-3">
            <label class="form-label">Year</label>
            <input type="number" class="form-control" name="bookYear" />
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
    <div class="container d-flex mt-3">
      <div class="row">
        <h3>Add to favorite</h3>
        <form action="/add-favorite" method="post">
          <div class="mb-3">
            <select name="readerId" class="form-select">
              <% for (reader of readers) { %>
              <option value="<%= reader._id %>"><%= reader.name %></option>
              <% } %>
            </select>
          </div>
          <div class="mb-3">
            <select name="bookId" class="form-select">
              <% for (book of books) { %>
              <option value="<%= book._id %>"><%= book.name %></option>
              <% } %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
