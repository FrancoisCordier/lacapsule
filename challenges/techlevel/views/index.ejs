<!DOCTYPE html>
<html>
  <head>
    <title>Tech Level</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid justify-content-center">
        <a class="navbar-brand" href="#">TechLevel</a>
      </div>
    </nav>
    <% for (let i = 0; i < devPersons.length; i++) { %>
    <div class="container mt-3">
      <div class="d-flex">
        <img class="img-small" src="images/<%= devPersons[i].sex%>.svg" />
        <div class="d-flex flex-column p-3">
          <h5 class="text-white"><%= devPersons[i].name %></h5>
          <div class="d-flex">
            <% for (skill of devPersons[i].skills) { %>
            <span class="badge rounded-pill bg-dark m-1 p-2"><%= skill%></span>
            <% } %>
          </div>
        </div>
      </div>
      <div class="progress">
        <div
          class="progress-bar"
          role="progressbar"
          style="width: <%= devPersons[i].level %>%"
          aria-valuenow="<%= devPersons[i].level %>"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          <%= devPersons[i].level %>%
        </div>
      </div>
    </div>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
